
@{
    ViewBag.Title = "Multimedias";
}

<div id="app" v-cloak>
    <div class="d-flex justify-content-between my-3">
        <h2>Archivos Multimedias</h2>
        <button class="btn btn-primary rounded-pill" data-toggle="modal" data-target="#ModalC" v-on:click="modal(1)">
            <img src="~/Imagenes/icons/plus-black.png" width="30" height="30" /> Agregar
        </button>
    </div>

    <div class="d-flex justify-content-center">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th v-for="dato in Encabezados" scope="col">{{dato}}</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="dato in Datos" v-on:click="modal(2, dato)" data-toggle="modal" data-target="#ModalC">
                    <th scope="row">{{dato.ID}}</th>
                    <td>{{dato.Name}}</td>
                    <td>{{dato.Extension}}</td>
                    <td>{{dato.Size}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="ModalC" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="ModalCTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title text-white">{{Media.Titulo}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12 p-0">
                        <label class="font-weight-bold">{{Media.Registro.Nombre.text}}</label>
                        <input type="text" class="form-control rounded-pill" v-model="Media.Registro.Nombre.value"
                               v-bind:class="{'is-invalid' : Media.Registro.Nombre.invalido}"
                               :placeholder="Media.Registro.Nombre.placeholder" />
                        <div class="invalid-feedback">
                            {{Media.Registro.Nombre.error}}
                        </div>
                    </div>
                    <div class="col-md-12 p-0">
                        <label class="font-weight-bold">{{Media.Registro.Extension.text}}</label>
                        <input type="text" class="form-control rounded-pill" v-model="Media.Registro.Extension.value"
                               v-bind:class="{'is-invalid' : Media.Registro.Extension.invalido}"
                               :placeholder="Media.Registro.Extension.placeholder" />
                        <div class="invalid-feedback">
                            {{Media.Registro.Extension.error}}
                        </div>
                    </div>
                    <div class="col-md-12 p-0">
                        <label class="font-weight-bold">{{Media.Registro.Tamaño.text}}</label>
                        <input type="number" class="form-control rounded-pill" v-model="Media.Registro.Tamaño.value"
                               v-bind:class="{'is-invalid' : Media.Registro.Tamaño.invalido}"
                               :placeholder="Media.Registro.Tamaño.placeholder" />
                        <div class="invalid-feedback">
                            {{Media.Registro.Tamaño.error}}
                        </div>
                    </div>
                    <div class="col-md-12 p-0">
                        <button type="button" class="btn btn-block btn-primary2 rounded-pill font-weight-bold mt-3" v-on:click="agregar"
                                :disabled="Media.Boton.disabled">
                            {{Media.Boton.texto}}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Scripts/v4/Multimedia/MMedia.js")