@{
    ViewBag.Title = "Listar Usuarios";
}

<div id="app" v-cloak>
    <div class="d-flex justify-content-between my-3">
        <h2>Listar Usuarios</h2>
        <button class="btn btn-primary rounded-pill" data-toggle="modal" data-target="#ModalC" v-on:click="modal(1)">
            <img src="~/Imagenes/icons/plus-black.png" width="30" height="30" /> Agregar
        </button>
    </div>

    <div class="d-flex justify-content-center">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th v-for="dato in Encabezados" scope="col">{{dato}}</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="dato in Datos" v-on:click="modal(2, dato)" data-toggle="modal" data-target="#ModalC">
                    <th scope="row">{{dato.ID}}</th>
                    <td>{{dato.Nombres}} {{dato.Apellidos}}</td>
                    <td>{{dato.Telefono}}</td>
                    <td>{{dato.Correo}}</td>
                    <td>{{dato.Rol}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade bd-example-modal-lg" id="ModalC" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="ModalCTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <h5 class="modal-title text-white">{{User.Titulo}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 p-0 px-1">
                            <div class="form-group m-0">
                                <label class="font-weight-bold">{{User.Registro.Nombre.text}}</label>
                                <input type="text" class="form-control rounded-pill" v-model="User.Registro.Nombre.value"
                                       v-bind:class="{'is-invalid' : User.Registro.Nombre.invalido}"
                                       :placeholder="User.Registro.Nombre.placeholder" />
                                <div class="invalid-feedback">
                                    {{User.Registro.Nombre.error}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 p-0 px-1">
                            <div class="form-group m-0">
                                <label class="font-weight-bold">{{User.Registro.Apellido.text}}</label>
                                <input type="text" class="form-control rounded-pill" v-model="User.Registro.Apellido.value"
                                       v-bind:class="{'is-invalid' : User.Registro.Apellido.invalido}"
                                       :placeholder="User.Registro.Apellido.placeholder" />
                                <div class="invalid-feedback">
                                    {{User.Registro.Apellido.error}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 p-0 px-1">
                            <div class="form-group m-0">
                                <label class="font-weight-bold">{{User.Registro.Fecha.text}}</label>
                                <input type="date" class="form-control rounded-pill" v-model="User.Registro.Fecha.value"
                                       v-bind:class="{'is-invalid' : User.Registro.Fecha.invalido}"
                                       :placeholder="User.Registro.Fecha.placeholder" />
                                <div class="invalid-feedback">
                                    {{User.Registro.Fecha.error}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9 p-0 px-1">
                            <div class="form-group m-0">
                                <label class="font-weight-bold">{{User.Registro.Direccion.text}}</label>
                                <input type="text" class="form-control rounded-pill" v-model="User.Registro.Direccion.value"
                                       v-bind:class="{'is-invalid' : User.Registro.Direccion.invalido}"
                                       :placeholder="User.Registro.Direccion.placeholder" />
                                <div class="invalid-feedback">
                                    {{User.Registro.Direccion.error}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 p-0 px-1">
                            <div class="form-group m-0">
                                <label class="font-weight-bold">{{User.Registro.Telefono.text}}</label>
                                <input type="text" class="form-control rounded-pill" v-model="User.Registro.Telefono.value"
                                       v-bind:class="{'is-invalid' : User.Registro.Telefono.invalido}"
                                       :placeholder="User.Registro.Telefono.placeholder" />
                                <div class="invalid-feedback">
                                    {{User.Registro.Telefono.error}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8 p-0 px-1">
                            <div class="form-group m-0">
                                <label class="font-weight-bold">{{User.Registro.Correo.text}}</label>
                                <input type="email" class="form-control rounded-pill" v-model="User.Registro.Correo.value"
                                       v-bind:class="{'is-invalid' : User.Registro.Correo.invalido}"
                                       :placeholder="User.Registro.Correo.placeholder" />
                                <div class="invalid-feedback">
                                    {{User.Registro.Correo.error}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 p-0 px-1">
                            <div class="form-group m-0">
                                <label class="font-weight-bold">{{User.Registro.Password.text}}</label>
                                <input type="password" class="form-control rounded-pill" v-model="User.Registro.Password.value"
                                       v-bind:class="{'is-invalid' : User.Registro.Password.invalido}"
                                       :placeholder="User.Registro.Password.placeholder" />
                                <div class="invalid-feedback">
                                    {{User.Registro.Password.error}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 p-0 px-1">
                            <div class="form-group m-0">
                                <label class="font-weight-bold">{{User.Registro.Rol.text}}</label>
                                <select class="form-control rounded-pill" v-model="User.Registro.Rol.value"
                                        v-bind:class="{'is-invalid' : User.Registro.Rol.invalido}">
                                    <option disabled value="">{{User.Registro.Rol.placeholder}}</option>
                                    <option v-for="opcion in User.Registro.Rol.data" v-bind:value="opcion.ID">{{opcion.Name}}</option>
                                </select>
                                <div class="invalid-feedback">
                                    {{User.Registro.Rol.error}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 rol-descrip">
                        <em>{{User.Registro.Rol.descripcion}}</em>
                    </div>
                    <div class="col-md-12 p-0">
                        <button type="button" class="btn btn-block btn-primary2 rounded-pill font-weight-bold mt-3" v-on:click="agregar"
                                :disabled="User.Boton.disabled">
                            {{User.Boton.texto}}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/v4/Usuarios/Listar.js")

